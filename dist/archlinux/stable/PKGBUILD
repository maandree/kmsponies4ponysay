pkgname=kmsponies4ponysay
pkgver=1.0
pkgrel=1
pkgdesc="Improving TTY support under KMS support for ponysay"
arch=('any')
url="https://github.com/maandree/kmsponies4ponysay"
license=('GPL3')
depends=('coreutils' 'bash' 'sed' 'util-say' 'ponysay')
makedepends=('coreutils')
provides=('kmsponies4ponysay')
conflicts=('kmsponies4ponysay')
source=(src.tar.xz)
md5sums=(0409eec898433b537f4b0ad5519c31ed)

build() {
  cd "$srcdir"
  make -B
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}
